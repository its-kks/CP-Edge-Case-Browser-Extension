{
  "manifest_version": 3,
  "name": "CP Edge Case Browser Extension",
  "version": "1.0",
  "description": "This extension parses and sends HTML data from competitive programming websites to the CP Edge case extension of VS Code.",
  "permissions": [
    "activeTab", 
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://codeforces.com/*",
    "https://*.codechef.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}